<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>de.kaiserpfalz-edv.commons</groupId>
    <artifactId>kp-commons-root</artifactId>
    <version>3.0.0</version>
    <packaging>pom</packaging>

    <name>KP Commons</name>
    <description>
        The kp-commons is a library that is used by the Kaiserpfalz EDV-Service for base integrations and common
        definitions like API base elements.
    </description>

    <modules>
        <module>core/kp-commons-parent</module>
        <module>core/kp-commons-bom</module>
        <module>core/kp-commons-api</module>
        <module>core/kp-commons-core</module>

        <module>modules/kp-commons-jpa</module>
        <module>modules/kp-commons-rest</module>
        <module>modules/kp-commons-quarkus</module>
        <module>modules/kp-commons-vaadin</module>

        <module>services/kp-commons-ean-search</module>
        <module>services/kp-commons-sms77</module>
        <module>services/kp-commons-dnb-lookup</module>

        <module>testsupport</module>
    </modules>

    <scm>
        <url>https://github.com/KaiserpfalzEDV/kp-commons</url>
        <connection>scm:git:git://github.com/KaiserpfalzEDV/kp-commons.git</connection>
        <developerConnection>scm:git:git@github.com:KaiserpfalzEDV/kp-commons.git</developerConnection>
        <tag>HEAD</tag>
    </scm>

    <distributionManagement>
        <repository>
            <id>kp-commons</id>
            <name>GitHub Packages for kp-commons</name>
            <url>https://maven.pkg.github.com/KaiserpfalzEDV/kp-commons</url>
        </repository>
    </distributionManagement>


    <profiles>
        <profile>
            <id>production</id>
        </profile>

        <profile>
            <id>release</id>

            <distributionManagement>
                <repository>
                    <id>github</id>
                    <name>GitHub Packages</name>
                    <url>https://maven.pkg.github.com/KaiserpfalzEDV/kp-commons</url>
                </repository>
            </distributionManagement>
        </profile>

        <profile>
            <id>site</id>

            <properties>
                <maven.javadoc.skip>true</maven.javadoc.skip>
            </properties>

            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-site-plugin</artifactId>
                        <version>3.12.1</version>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-project-info-reports-plugin</artifactId>
                        <version>3.4.2</version>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-report-plugin</artifactId>
                        <version>3.0.0-M8</version>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-javadoc-plugin</artifactId>
                        <version>3.5.0</version>
                        <configuration>
                            <skip>${maven.javadoc.skip}</skip>
                        </configuration>
                    </plugin>
                </plugins>
            </build>

            <reporting>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-javadoc-plugin</artifactId>
                        <configuration>
                            <skip>${maven.javadoc.skip}</skip>
                        </configuration>
                    </plugin>
                </plugins>
            </reporting>
        </profile>
    </profiles>
</project>
