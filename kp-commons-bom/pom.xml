<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <packaging>pom</packaging>

    <parent>
        <groupId>de.kaiserpfalz-edv.commons</groupId>
        <artifactId>kp-commons-root</artifactId>
        <version>4.0.5</version>
    </parent>

    <artifactId>kp-commons-bom</artifactId>
    <name>${project.artifactId}</name>
    <description>The BOM for all kp-commons</description>
    
    <properties>
        <kp-commons.groupId>de.kaiserpfalz-edv.commons</kp-commons.groupId>
        <kp-commons.version>4.0.5</kp-commons.version>

        <main.basedir>${project.basedir}/..</main.basedir>

        <jackson.version>2.17.0</jackson.version>
        <spring-boot.version>3.3.5</spring-boot.version>
        <springframework.version>6.1.14</springframework.version>
        <jackson-bom.version>2.18.1</jackson-bom.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.springframework</groupId>
                <artifactId>spring-framework-bom</artifactId>
                <version>${springframework.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>

            <dependency>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-dependencies</artifactId>
                <version>${spring-boot.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>

            <dependency>
                <groupId>jakarta.platform</groupId>
                <artifactId>jakarta.jakartaee-bom</artifactId>
                <version>11.0.0-M4</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>

            <dependency>
                <groupId>io.github.openfeign</groupId>
                <artifactId>feign-bom</artifactId>
