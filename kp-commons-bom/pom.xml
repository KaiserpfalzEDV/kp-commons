                <version>${kp-commons.version}</version>
            </dependency>
            <dependency>
                <groupId>${kp-commons.groupId}</groupId>
                <artifactId>kp-commons-core</artifactId>
                <version>${kp-commons.version}</version>
            </dependency>
            <dependency>
                <groupId>${kp-commons.groupId}</groupId>
                <artifactId>kp-commons-jpa</artifactId>
                <version>${kp-commons.version}</version>
            </dependency>
            <dependency>
                <groupId>${kp-commons.groupId}</groupId>
                <artifactId>kp-commons-spring</artifactId>
                <version>${kp-commons.version}</version>
            </dependency>
            <dependency>
                <groupId>${kp-commons.groupId}</groupId>
                <artifactId>kp-commons-rest</artifactId>
                <version>${kp-commons.version}</version>
