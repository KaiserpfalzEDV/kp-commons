<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <packaging>pom</packaging>

    <parent>
        <groupId>de.kaiserpfalz-edv.commons</groupId>
        <artifactId>kp-commons-root</artifactId>
        <version>2.0.2-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <artifactId>kp-commons-bom</artifactId>
    <name>KP Commons :: Bill of Materials</name>

    <properties>
        <kp-commons.groupId>de.kaiserpfalz-edv.commons</kp-commons.groupId>
        <kp-commons.version>2.0.2-SNAPSHOT</kp-commons.version>
        <discord.version>3.5.0_329</discord.version>

        <quarkus.platform.artifact-id>quarkus-universe-bom</quarkus.platform.artifact-id>
        <quarkus.platform.group-id>io.quarkus</quarkus.platform.group-id>
        <quarkus.version>2.4.2.Final</quarkus.version>

        <surefire-plugin.version>2.22.1</surefire-plugin.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.slf4j</groupId>
                <artifactId>slf4j-api</artifactId>
                <version>1.7.31</version>
            </dependency>

            <!-- KP RPG modules -->
            <dependency>
                <groupId>${kp-commons.groupId}</groupId>
                <artifactId>kp-commons-root</artifactId>
                <version>${kp-commons.version}</version>
            </dependency>
            <dependency>
                <groupId>${kp-commons.groupId}</groupId>
                <artifactId>kp-commons-parent</artifactId>
                <version>${kp-commons.version}</version>
            </dependency>
            <dependency>
                <groupId>${kp-commons.groupId}</groupId>
                <artifactId>kp-commons-bom</artifactId>
                <version>${kp-commons.version}</version>
            </dependency>
            <dependency>
                <groupId>${kp-commons.groupId}</groupId>
                <artifactId>kp-commons-core</artifactId>
                <version>${kp-commons.version}</version>
            </dependency>
            <dependency>
                <groupId>${kp-commons.groupId}</groupId>
                <artifactId>kp-commons-discord</artifactId>
                <version>${kp-commons.version}</version>
            </dependency>
            <dependency>
                <groupId>${kp-commons.groupId}</groupId>
                <artifactId>kp-commons-google</artifactId>
                <version>${kp-commons.version}</version>
            </dependency>

            <dependency>
                <groupId>${kp-commons.groupId}.test-support</groupId>
                <artifactId>mongodb-testsupport</artifactId>
                <version>${kp-commons.version}</version>
                <scope>test</scope>
            </dependency>

            <dependency>
                <groupId>${kp-commons.groupId}.test-support</groupId>
                <artifactId>oauth2-testsupport</artifactId>
                <version>${kp-commons.version}</version>
                <scope>test</scope>
            </dependency>

            <dependency>
                <groupId>${kp-commons.groupId}.test-support</groupId>
                <artifactId>discord-testsupport</artifactId>
                <version>${kp-commons.version}</version>
                <scope>test</scope>
            </dependency>


            <!-- quarkus -->
            <dependency>
                <groupId>${quarkus.platform.group-id}</groupId>
                <artifactId>${quarkus.platform.artifact-id}</artifactId>
                <version>${quarkus.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>

            <dependency>
                <groupId>javax.annotation</groupId>
                <artifactId>jsr250-api</artifactId>
                <version>1.0</version>
            </dependency>
            <dependency>
                <groupId>jakarta.validation</groupId>
                <artifactId>jakarta.validation-api</artifactId>
                <version>3.0.0</version>
            </dependency>

            <!-- lombok - syntactical suggar -->
            <dependency>
                <groupId>org.projectlombok</groupId>
                <artifactId>lombok</artifactId>
                <version>1.18.20</version>
            </dependency>


            <!-- Evaluate mathematical expressions -->
            <dependency>
                <groupId>net.objecthunter</groupId>
                <artifactId>exp4j</artifactId>
                <version>0.4.8</version>
            </dependency>

            <!-- MarkDown Library -->
            <dependency>
                <groupId>com.github.rjeschke</groupId>
                <artifactId>txtmark</artifactId>
                <version>0.13</version>
            </dependency>

            <!-- Encryption -->
            <dependency>
                <groupId>org.connectbot</groupId>
                <artifactId>jbcrypt</artifactId>
                <version>1.0.2</version>
            </dependency>

            <!-- Bson management (for mongodb integration) -->
            <dependency>
                <groupId>io.github.cbartosiak</groupId>
                <artifactId>bson-codecs-jsr310</artifactId>
                <version>3.5.4</version>
            </dependency>


            <!-- TODO 2021-05-11 rlichti API documentation, can't switch to 2.x since quarkus.io does not support it yet. -->
            <dependency>
                <groupId>org.eclipse.microprofile.openapi</groupId>
                <artifactId>microprofile-openapi-api</artifactId>
                <version>3.0</version>
            </dependency>

            <!-- testing -->
            <dependency>
                <groupId>org.junit</groupId>
                <artifactId>junit-bom</artifactId>
                <version>5.8.1</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>org.apache.logging.log4j</groupId>
                <artifactId>log4j</artifactId>
                <version>2.14.1</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>org.testcontainers</groupId>
                <artifactId>testcontainers-bom</artifactId>
                <version>1.16.2</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>

            <dependency>
                <groupId>com.github.tomakehurst</groupId>
                <artifactId>wiremock-jre8</artifactId>
                <version>2.32.0</version>
            </dependency>
        </dependencies>
    </dependencyManagement>
</project>
